@model RedeSocialWeb.Models.DashBoardModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div>
    <h4>DashBoardModel</h4>
    <hr />
</div>

<div class="col-sm-2 sidenav">
    <div class="thumbnail text-left">
        <a href="/w3images/lights.jpg">
            <img src="@Html.DisplayFor(model => model.fotoPerfil)" alt="Lights" style="width:100%">
            <div class="caption">
                <h4>@Html.DisplayFor(model => model.nomePerfil)</h4>
            </div>
            <div class="text-right">
                @if(Model.UserId.ToString() == Session["UserId"].ToString())
                {
                    <a href="@Url.Action("../Perfils/Edit", new { id = Model.idPerfil })" title="Editar" >
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                }else
                {
                    <a href="@Url.Action("../Seguirs/SeguirPerfil", new { id = Model.idPerfil })" title="Seguir" class="btn btn-sm btn-info">
                        <span aria-hidden="true">Seguir</span>
                    </a>
                }
            </div>
        </a>
    </div>
</div>
<div class="col-sm-8 text-left">
    @foreach (var item in Model.postagens)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="@Url.Action("PerfilTerceiro", new { userId = item.UserId } )" title="Ver perfil">
                    @Html.DisplayFor(modelItem => item.UserName)
                </a>
             postou</div>
            <div class="panel-body">
                @Html.DisplayFor(modelItem => item.FotoPostagem)
                @Html.DisplayFor(modelItem => item.TextoPostagem)
            </div>
        </div>                    
    }

    

</div>
<div class="col-sm-2 sidenav">
    <div class="well">
        <p>ADS</p>
    </div>
    <div class="well">
        <p>ADS</p>
    </div>
</div>


