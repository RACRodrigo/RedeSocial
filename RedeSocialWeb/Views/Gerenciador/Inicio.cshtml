@model RedeSocialWeb.Models.DashBoardModel

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>
<hr />
<div class="col-sm-2 sidenav">
    <div class="thumbnail text-left">
        <a href="@Url.Action("PerfilVisitado", new { userId = Model.UserId } )" title="@Html.DisplayFor(model => model.nomePerfil)">
            <img src="@Html.DisplayFor(model => model.fotoPerfil)" alt="Lights" style="width:100%">
            <div class="caption">
                <h4>@Html.DisplayFor(model => model.nomePerfil)</h4>
            </div>
            <div class="text-right">
                @if (Model.UserId.ToString() == Session["UserId"].ToString())
                {
                    <a href="@Url.Action("../Perfils/Edit", new { id = Model.idPerfil })" title="Editar">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("../Seguirs/SeguirPerfil", new { id = Model.idPerfil })" title="Seguir" class="btn btn-info">
                        <span aria-hidden="true">Seguir</span>
                    </a>
                }
            </div>
        </a>
    </div>
</div>
<div class="col-sm-8 text-left">
    @*-----Lista de postagens-----*@
    @foreach (var item in Model.postagensSeguidos)
    {
        <div class="qa-message-list" id="wallmessages">
            <div class="message-item" id="m16">
                <div class="message-inner">
                    <div class="message-head clearfix">
                        <div class="avatar pull-left">
                            <a href="@Url.Action("PerfilVisitado", new { userId = item.UserId } )">
                                <img src="@Html.DisplayFor(model => item.UserFoto)" title="@Html.DisplayFor(modelItem => item.UserName)" class="imgPost">
                            </a>
                        </div>
                        <div class="user-detail">
                            <h5 class="handle">
                                <a href="@Url.Action("PerfilVisitado", new { userId = item.UserId } )">
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </a>
                            </h5>
                            <div class="post-meta">
                                <div class="asker-meta">
                                    <span class="qa-message-what"></span>
                                    <span class="qa-message-when">
                                        <span class="qa-message-when-data">
                                            @Html.DisplayFor(modelItem => item.DataPostagem)
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="qa-message-content">
                        @Html.DisplayFor(modelItem => item.TextoPostagem)
                    </div>
                </div>
            </div>
        </div>
    }

    

</div>
<div class="col-sm-2 sidenav">
    <div class="well">
        <p>ADS</p>
    </div>
    <div class="well">
        <p>ADS</p>
    </div>
</div>


