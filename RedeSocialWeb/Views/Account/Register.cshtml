@model RedeSocialWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Criar conta";
}
<div class="container">
    <div class="col-sm-4">
        <div class="thumbnail">
            <div class="container">
                <h2>Cadastro</h2>
                <section id="loginForm">

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Criar uma nova conta.</h4>

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="col-md-12 col-xs-12">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        </div>
                        <div class="form-group">

                            <div class="col-md-12 col-xs-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-12 col-xs-12" })
                            </div>
                            <div class="col-md-12 col-xs-12">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 col-xs-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-12 col-xs-12" })
                            </div>
                            <div class="col-md-12 col-xs-12">
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 col-xs-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-12 col-xs-12" })
                            </div>
                            <div class="col-md-12 col-xs-12">
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">&nbsp;</div>
                        <div class="form-group">
                            <div class="col-md-10 col-xs-12">
                                <input type="submit" value="Cadastrar" class="btn btn-primary col-md-12 col-xs-12" />
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">&nbsp;</div>
                    }
                    </section>
                </div>
            </div>
        </div>
    </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
